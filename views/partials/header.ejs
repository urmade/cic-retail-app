              <% if(!locals.isAuthenticated) { %>
              <a href="/login">
                <button class="btn btn-primary btn-margin">
                  Log in
                </button>
              </a>
              <% } else { %>
                <a href="/logout">
                  <button class="btn btn-primary btn-margin">
                    Log out
                  </button>
                </a>
                <% } %>
